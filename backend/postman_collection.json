{
  "info": {
    "name": "Online Examination System API",
    "description": "Complete API collection for testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\",\n  \"role\": \"admin\"\n}"
            },
            "url": {"raw": "http://localhost:5000/api/auth/register"}
          }
        },
        {
          "name": "Register Student",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Student User\",\n  \"email\": \"student@example.com\",\n  \"password\": \"student123\",\n  \"role\": \"student\"\n}"
            },
            "url": {"raw": "http://localhost:5000/api/auth/register"}
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {"raw": "http://localhost:5000/api/auth/login"}
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:5000/api/auth/me"}
          }
        }
      ]
    },
    {
      "name": "Exams",
      "item": [
        {
          "name": "Create Exam",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"JavaScript Basics\",\n  \"description\": \"Test your JS knowledge\",\n  \"duration\": 60,\n  \"totalMarks\": 100,\n  \"passingMarks\": 40\n}"
            },
            "url": {"raw": "http://localhost:5000/api/exams"}
          }
        },
        {
          "name": "Get All Exams",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:5000/api/exams"}
          }
        },
        {
          "name": "Get Exam",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:5000/api/exams/{{examId}}"}
          }
        },
        {
          "name": "Update Exam",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"JavaScript Advanced\"\n}"
            },
            "url": {"raw": "http://localhost:5000/api/exams/{{examId}}"}
          }
        },
        {
          "name": "Delete Exam",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:5000/api/exams/{{examId}}"}
          }
        }
      ]
    },
    {
      "name": "Questions",
      "item": [
        {
          "name": "Add Question",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"What is JavaScript?\",\n  \"options\": [\"Language\", \"Database\", \"OS\", \"Framework\"],\n  \"correctAnswer\": 0,\n  \"marks\": 5\n}"
            },
            "url": {"raw": "http://localhost:5000/api/exams/{{examId}}/questions"}
          }
        },
        {
          "name": "Get Questions",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:5000/api/exams/{{examId}}/questions"}
          }
        },
        {
          "name": "Update Question",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"marks\": 10\n}"
            },
            "url": {"raw": "http://localhost:5000/api/questions/{{questionId}}"}
          }
        },
        {
          "name": "Delete Question",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:5000/api/questions/{{questionId}}"}
          }
        }
      ]
    },
    {
      "name": "Results",
      "item": [
        {
          "name": "Submit Exam",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"answers\": [\n    {\"questionId\": \"{{questionId}}\", \"selectedAnswer\": 0}\n  ]\n}"
            },
            "url": {"raw": "http://localhost:5000/api/exams/{{examId}}/submit"}
          }
        },
        {
          "name": "Get My Results",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:5000/api/results"}
          }
        },
        {
          "name": "Get Result by Exam",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:5000/api/exams/{{examId}}/result"}
          }
        },
        {
          "name": "Get All Results (Admin)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {"raw": "http://localhost:5000/api/results/all"}
          }
        }
      ]
    }
  ]
}
